* 
    margin 0
    padding 0

body, input, textarea, button
    font-family 'Open Sans', sans-serif
    font-size 13px
    color #303030

header
    background #303030
    height 45px
    position relative

    a
        padding 0
        background none
        display inline

        &:hover
            background none

    h2
        position absolute
        right 10px
        top 3px
        margin 0
        font-size 25px
        color white


h1, h2, h3, h4, h5, h6 
    font-weight normal
    text-transform uppercase

h2
    font-size 50px
    margin 10px 0

h3
    font-size 25px
    margin 3px 0

a
    color inherit 
    text-decoration none

    &:hover
        text-decoration underline

#main
    padding 30px

.cols 
    overflow hidden

.col1 
    float left

.col2
    float left    


h4
    background #303030
    display inline-block
    color white
    padding 1px 5px
    margin 3px 0

hr
    margin 10px 0
    border 0
    border-bottom 1px solid #303030


table
    border-spacing 0
    width 700px
    border-collapse collapse
    border 1px solid #e5e5e5
    margin-top 10px
    
    td
        padding 2px 10px
        border 1px solid #f3f3f3
        vertical-align middle

        &:first-child
            img 
                margin-right 10px

    tr
        &:nth-child(even)
            background #e5e5e5

.stats
    overflow hidden

    .block-stat
        float left
        margin-right 20px

        span
            display inline-block
            padding 0 5px
            margin 3px 0
            border-right 2px solid #e5e5e5

            &:first-of-type
                padding-left 0

            &:last-of-type
                border-right 0

.chart-geo
    width 700px
    height 500px
    margin 15px 0
    background url(/images/admin/cargando.gif) center center no-repeat
    border 1px solid #9f9f9f